{
  "name": "frutilla-studio",
  "version": "1.0.0",
  "description": "Cross-platform music production app with autotune, recording, beats library, and AI vocal enhancement",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "music",
    "audio",
    "production",
    "daw",
    "autotune",
    "recording",
    "beats"
  ],
  "author": "Frutilla Studio",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@tonejs/midi": "^2.0.28",
    "tone": "^14.8.49",
    "wavesurfer.js": "^7.4.4"
  },
  "build": {
    "appId": "com.frutilla.studio",
    "productName": "Frutilla Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "OmegaStudio/build/OmegaStudio_artefacts/Release/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio"
    }
  }
}
